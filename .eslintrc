{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEV__": true,
    "__SERVER__": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    // Strict mode
    "strict": [0, "never"],

    // Code style
    "indent": [2, 2],
    "quotes": [2, "single"],
    "no-unused-vars": [
      0,
      {
        "vars": "all",
        "args": "after-used"
      }
    ]
  }
}
